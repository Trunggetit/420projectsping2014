@model IEnumerable<baptisthealth.Models.vendor>

@{
    ViewBag.Title = "listofvendor";
}

<h2>Vendor Mangement</h2>

<script type="text/javascript">

    function GetStatus(item)
    {
        window.location.href("Listofvendor?status=" + item);
    }

</script>

<a class="btn btn-primary" href="@Url.Action("Listofvendor", "vendor", new {status=0})">Awaiting approval</a>
<a class="btn btn-primary" href="@Url.Action("Listofvendor", "vendor", new {status=1})">Approved List</a>
<a class="btn btn-primary" href="@Url.Action("Listofvendor", "vendor", new {status=2})">Denied List</a>


<table class="table table-bordered table-hover " id="tablesorting">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.companyname)
        </th>
        <td>
            @Html.DisplayNameFor(model => model.username)
        </td>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <td></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.companyname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td><a class="btn btn-success" href="@Url.Action("Detail", "vendor", new { id = item.vendorid}, null)">Detail</a></td>
        </tr>
    }

</table>
